{
  "compilerOptions": {
    "outDir": "./built",
    "target": "esnext",
    "module": "commonjs",
    "types" : ["jest", "node"],
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
